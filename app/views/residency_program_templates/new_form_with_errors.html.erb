<% if @residency_program.present? %>
  <% if @residency_program.errors.any? %>
    <% @residency_program.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new residency program
</h1>


<hr>

<form action="/create_residency_program" method="post">

  <div class="form-group">
    <label for="state">
      State
    </label>

    <input type="text" id="state" name="state" class="form-control" value="<%= @residency_program.state %>">
  </div>

  <div class="form-group">
    <label for="program_name">
      Program name
    </label>

    <input type="text" id="program_name" name="program_name" class="form-control" value="<%= @residency_program.program_name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create residency program
  </button>
</form>

<hr>

<a href="/residency_programs">
  Go back
</a>
