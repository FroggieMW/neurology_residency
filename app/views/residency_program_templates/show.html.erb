<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Residency program #<%= @residency_program.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/residency_programs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/residency_programs/<%= @residency_program.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit residency program
        </a>
      </div>

      <div class="col">
        <a href="/delete_residency_program/<%= @residency_program.id %>" class="btn btn-block btn-outline-secondary">
          Delete residency program
        </a>
      </div>
    </div>

    <dl>
      <dt>
        State
      </dt>
      <dd>
        <%= @residency_program.state %>
      </dd>

      <dt>
        Program name
      </dt>
      <dd>
        <%= @residency_program.program_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@residency_program.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@residency_program.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "residency_program_templates/residency_program_interviews" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "residency_program_templates/residency_program_interview_invites" %>
  </div>
</div>
