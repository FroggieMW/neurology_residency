<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Interviews

    <a data-toggle="collapse" href="#residency_program_interviews_new_form">
      Add interview
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @residency_program.interviews.each do |interview| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/interviews/<%= interview.id %>">
          <%= interview.residency_program_id %>
        </a>

        <%if current_user == interview.interviewee %>
          <a href="/delete_interview_from_residency_program/<%= interview.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="residency_program_interviews_new_form">
        <%= render partial: "residency_program_templates/residency_program_interviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
