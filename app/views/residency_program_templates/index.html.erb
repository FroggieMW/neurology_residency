<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All residency programs
    </h1>

    <a href="/residency_programs/new" class="btn btn-block btn-outline-secondary">
      Add a new residency program
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "residency_program_templates/residency_programs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          State
        </th>

        <th>
          Program name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @residency_programs.each do |residency_program| %>
      <tr>
        <td>
          <%= residency_program.id %>
        </td>

        <td>
          <%= residency_program.state %>
        </td>

        <td>
          <%= residency_program.program_name %>
        </td>

        <td>
          <%= time_ago_in_words(residency_program.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(residency_program.updated_at) %> ago
        </td>

        <td>
          <a href="/residency_programs/<%= residency_program.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @residency_programs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
