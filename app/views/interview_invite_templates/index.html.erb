<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All interview invites
    </h1>

    <a href="/interview_invites/new" class="btn btn-block btn-outline-secondary">
      Add a new interview invite
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "interview_invite_templates/interview_invites_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Residency program
        </th>

        <th>
          Invite received date
        </th>

        <th>
          Invitee
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @interview_invites.each do |interview_invite| %>
      <tr>
        <td>
          <%= interview_invite.id %>
        </td>

        <td>
          <% if interview_invite.residency_program.present? %>
            <a href="/residency_programs/<%= interview_invite.residency_program.id %>">
              <%= interview_invite.residency_program.state %>
            </a>
          <% end %>
        </td>

        <td>
          <%= interview_invite.invite_received_date %>
        </td>

        <td>
          <% if interview_invite.author.present? %>
            <a href="/users/<%= interview_invite.author.id %>">
              <%= interview_invite.author.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(interview_invite.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(interview_invite.updated_at) %> ago
        </td>

        <td>
          <a href="/interview_invites/<%= interview_invite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @interview_invites, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
