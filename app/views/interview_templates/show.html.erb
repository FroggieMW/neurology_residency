<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Interview #<%= @interview.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/interviews" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link interview start -->
      <div class="col">
        <% if current_user == @interview.interviewee %>
          <a href="/interviews/<%= @interview.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit interview
          </a>
        <% end %>
      </div>
      <!-- Edit link interview end -->

      <!-- Delete link interview start -->
      <div class="col">
        <% if current_user == @interview.interviewee %>
          <a href="/delete_interview/<%= @interview.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete interview
          </a>
        <% end %>
      </div>
      <!-- Delete link interview end -->
    </div>

    <dl>
      <dt>
        Residency program
      </dt>
      <!-- Display residency_program_id start -->
      <dd>
        <% if @interview.residency_program.present? %>
          <a href="/residency_programs/<%= @interview.residency_program_id %>">
            <%= @interview.residency_program.state %>
          </a>
        <% end %>
      </dd>
      <!-- Display residency_program_id end -->

      <dt>
        Interviewee
      </dt>
      <!-- Display interviewee_id start -->
      <dd>
        <% if @interview.interviewee.present? %>
          <a href="/users/<%= @interview.interviewee_id %>">
            <%= @interview.interviewee.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display interviewee_id end -->

      <dt>
        Interview date
      </dt>
      <!-- Display interview_date start -->
      <dd>
        <%= @interview.interview_date %>
      </dd>
      <!-- Display interview_date end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@interview.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@interview.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

